<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="signupDialog" title="Signup">
    <VBox class="sapUiSmallMargin">
      <Input placeholder="Username" value="{signupModel>/username}" />
      <Input placeholder="Email" value="{signupModel>/email}" />
      <Input placeholder="Password" type="Password" value="{signupModel>/password}" />
      <Select selectedKey="{signupModel>/role}">
        <items>
          <core:Item key="Select" text="Select" />
          <core:Item key="Manager" text="Manager" />
          <core:Item key="Employee" text="Employee" />
        </items>
      </Select>
    </VBox>
    <beginButton>
      <Button text="Signup" press="onSignupSubmit" />
    </beginButton>
    <endButton>
      <Button text="Cancel" press="onSignupClose" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>