<mvc:View controllerName="inventorymgs.controller.Inventory"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
 <Page id="inventoryPage" title="Manager | Live Inventory" showHeader="true">
    <content>
      <VBox id="_IDGenVBox1" class="sapUiSmallMargin sapUiContentPadding">
        
        <VBox alignItems="Center">
        <Title id="_IDGenTitle2" text="Manage Live Inventory" level="H2" class="customTitleLarge2" />
        </VBox>

        <HBox id="_IDGenHBox1" justifyContent="End" alignItems="Center">
        <Button id="_IDGenButton" text="Add Item" icon="sap-icon://add" press="onAddPress" type="Emphasized" />
        </HBox>

        <Table id="inventoryTable" inset="false" items="{/Items}">
          <columns>
            <Column id="_IDGenColumn"><Text id="_IDGenText2" text="Name" /></Column>
            <Column id="_IDGenColumn1"><Text id="_IDGenText3" text="Description" /></Column>
            <Column id="_IDGenColumn2"><Text id="_IDGenText4" text="Stock" /></Column>
            <Column id="_IDGenColumn3"><Text id="_IDGenText5" text="Category" /></Column>
            <Column id="_IDGenColumn4"><Text id="_IDGenText6" text="Actions" /></Column>
          </columns>
          <items>
            <ColumnListItem id="_IDGenColumnListItem">
              <cells>
                <Text id="_IDGenText7" text="{name}" />
                <Text id="_IDGenText8" text="{description}" />
                <Text id="_IDGenText9" text="{currentStock}" />
                <Text id="_IDGenText10" text="{category}" />
                <HBox id="_IDGenHBox2">
                  <Button id="_IDGenButton1" icon="sap-icon://edit" press="onEditPress" type="Transparent" />
                  <Button id="_IDGenButton2" icon="sap-icon://delete" press="onDeletePress" type="Transparent" />
                </HBox>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </VBox>
    </content>
  </Page>
</mvc:View>