<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="createPRDialog"
    title="Create Purchase Requisition"
    class="sapUiContentPadding"
    contentWidth="500px"
    stretchOnPhone="true">

    
 
    <VBox>
      <HBox>
      <Label text="Item " />
        <Text text="*" class="mandatoryAsterisk" />
      </HBox>
      
      <Select
        id="itemSelect"
        width="100%"
        forceSelection="false"
        items="{
          path: '/Items',
          sorter: { path: 'name' }
        }">
        <core:Item key="{ID}" text="{name}" />
      </Select>
 
      <Label text="Quantity " labelFor="quantityInput" required="true" class="sapUiSmallMarginTop"/>
      <Input id="quantityInput" placeholder="Enter quantity" type="Number" width="100%"/>
 
      <Label text="Description" labelFor="purposeInput" required="true" class="sapUiSmallMarginTop"/>
      <TextArea id="purposeInput" placeholder="Comments" width="100%" rows="3"/>
    </VBox>
 
    <beginButton>
      <Button text="Submit" type="Emphasized" press=".onSubmitPR"/>
    </beginButton>
 
    <endButton>
      <Button text="Cancel" press=".onCancelPR"/>
    </endButton>
 
    <customHeader>
      <Bar>
        <contentMiddle>
          <Text text="Create Purchase Requisition"/>
        </contentMiddle>
        <contentRight>
          <Button icon="sap-icon://refresh" tooltip="Reset Form" press=".onResetForm"/>
        </contentRight>
      </Bar>
    </customHeader>
  </Dialog>
</core:FragmentDefinition>
 
 